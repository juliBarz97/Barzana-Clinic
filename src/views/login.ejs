<!doctype html>
<html>
    <%- include ('./partials/head') %>
<body id="cuerpo">
    <%- include ('./partials/header') %>

<main>
    
    <form id="login" method="POST" action="/users/validLogin">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp">
          <% if (locals.errors && errors.email) { %>
          <div class="text-danger">
            <%= errors.email.msg %>
          </div>
          <% } else { %> 
          <div id="emailHelp" class="form-text"> We'll never share your password and email with anyone else.</div>
            <% } %>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>          
          <input type="password" class="form-control" id="password" name="password" required> 
          <% if (locals.errors && errors.password) { %>
            <div class="text-danger">
            <%= errors.password.msg  %>
            <% } %> 
        </div>
        <div class="pass-valid">
        </div>
        <input type="checkbox" onclick="myFunction()">Show Password
        <button type="submit" class="btn btn-primary" style="background-color: #003e51;"> Login </button>
        <br>
        <p> You don't have an account? <a href="/users/register" style="color:black !important;">Register Here!</a> </p>
    </form>
    
</main>
    <script src="/public/js/login.js"></script>
    <%- include ('./partials/footer') %>

</body>

</html>