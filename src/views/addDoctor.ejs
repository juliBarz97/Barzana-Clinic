<!doctype html>
<html lang="en">
  <%- include ('./partials/head') %>
<body id="cuerpo">

  <%- include ('./partials/header') %>
  <main>
      
    <form class="row g-3" id="Register" >
       <h2> Add a new Professional!</h2>
      <div class="col-md-4">
        <label for="validationDefault01" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="validationDefault01" value="Mark" required>
      </div>
      <div class="col-md-4">
        <label for="validationDefault02" class="form-label"> Area of Expertise </label>
        <input type="text" class="form-control" id="validationDefault02" value="Otto" required>
      </div>
      <div class="col-md-3">
        <label for="validationDefault07" class="form-label"> Email </label>
        <input type="text" class="form-control" id="validationDefault07" required>
      </div>
      <div class="col-md-6">
        <label for="validationDefault05" class="form-label"> Birthdate </label>
        <input type="date" class="form-control" id="validationDefault05" required>
      </div>
        <div class="col-md-3">
        <label for="validationDefault07" class="form-label">City</label>
        <input type="text" class="form-control" id="validationDefault07" required>
      </div> 
      
      <div class="col-md-3">
        <label for="validationDefault06" class="form-label"> Days Available: </label>
        <br>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
            <label class="form-check-label" for="inlineCheckbox1"> Monday</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
            <label class="form-check-label" for="inlineCheckbox2"> Tuesday </label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
            <label class="form-check-label" for="inlineCheckbox3"> Wednesday</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
            <label class="form-check-label" for="inlineCheckbox3"> Thursday</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
            <label class="form-check-label" for="inlineCheckbox3"> Friday </label>
          </div>
      </div>
    
    
      
      <div class="col-md-3">
        <label for="validationDefault08" class="form-label">Phone Number</label>
        <input type="number" class="form-control" id="validationDefault0" required>
      </div>
      <div class="col-md-3">
        <label for="validationDefault09" class="form-label">Profile Picture</label>
        <input type="image" class="form-control" id="validationDefault09" required>
      </div>
      <div class="col-md-3">
      <br>
      <div class="col-12">
        <button class="btn btn-primary" type="submit" style="background-color: #003e51;">Submit form</button>
      </div>
    </form>

</main>

  <%- include ('./partials/footer') %>

</body>
</html>